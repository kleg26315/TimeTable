<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorLightGray">

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:id="@+id/memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메모 등록하기"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/memo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@id/memo"
        />

    <EditText
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="제목 추가"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@id/memo_title"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/memo_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        android:textColor="#000000"
        android:textSize="21dp"
        android:layout_below="@id/title_edit"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/des_edit"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:hint="설명 추가"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@id/memo_des"/>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/memoBtn"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="메모 등록"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:textStyle="bold"
            android:textSize="30dp"
            />
    </LinearLayout>


</RelativeLayout>